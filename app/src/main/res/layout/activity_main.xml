<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/bt_anim"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:text="Animation Activity"
            app:backgroundTint="@null"/>


        <Button
            android:id="@+id/bt_telegram"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_gradient"
            android:text="Telegram Activity"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/bt_facebook"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_borders"
            android:text="FacebookActivity"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/bt_instagram"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_gradient_rotate"
            android:text="Instagram activity"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/bt_twitter"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_dashed"
            android:text="Twitter activity"
            android:textColor="@color/black"
            app:backgroundTint="@null"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>